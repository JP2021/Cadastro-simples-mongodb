<%- include ("top.ejs") %>
    <div class="alert alert-info">
<%= qty %> Clientes Cadastrados
</div>
    <table>
      <p>
       <table class="table table-bordered table-striped table-hover">
        <thead class="thead-dark">
          <tr>
            <td>Nome </td>
            <td>CPF </td>
            <td>Região </td>
            <td>UF </td>
            <td>Ações </td>
          </tr>
        </thead>
        <tbody>

          <%
          customers.forEach(item=>{

          %>
         
          <tr>
           
           <td><a href="/customers/edit/<%= item._id %>"><%= item.name %></a></td> 
           <td><%= item.cpf %></td> 
           <td><%= item.city %></td> 
           <td><%= item.uf %></td> 
           <td>
            <a href="/customers/delete/<%= item._id %>" title="Excluir" class="btn btn-danger"
            onclick="return confirm('Tem certeza que deseja excluir esse cliente?')"><img src="/images/eraser.png" /></a></td> 
          
          </tr>
          <%
        })
        %>

        </tbody>
       </table>
      </p>
      <br>
     <div class="row">
      <div class="col-2">
              <a href="/customers/new" class="btn btn-primary">Cadastrar Novo</a>
              </div>
              <div class="col-2">
                <a href="/" class="btn btn-primary">Index</a>
                </div>
                <div class="col-2">
                  <form action="/logout" method="POST">
                  <input type="submit" value="Logout" class="btn btn-primary"/>
                </form>
</div>
    
    </table>
